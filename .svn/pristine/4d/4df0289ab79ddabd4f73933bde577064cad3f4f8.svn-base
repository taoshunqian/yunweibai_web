<template>
  <TabHeaders :navTitle="navTitle" :leftArrow="false" />

  <CellGroup inset style="margin: 10px" class="cellGroup">
    <Field
      label="车辆宽度"
      placeholder="请输入车辆宽度"
      type="number"
      input-align="right"
      v-model="adasInfo[1]"
    >
    <template #button>
        <label size="small" type="primary">CM</label>
      </template>
    </Field>
  </CellGroup>

  <CellGroup inset style="margin: 10px" class="cellGroup">
    <Field
      label="摄像头到车辆左侧距离"
      placeholder="请输入距离"
      type="number"
      input-align="right"
      v-model="adasInfo[2]"
      label-width="200"
    >
      <template #button>
        <label size="small" type="primary">CM</label>
      </template>
    </Field>
  </CellGroup>

  <CellGroup inset style="margin: 10px" class="cellGroup">
    <Field
      label="摄像头安装宽度"
      label-width="200"
      placeholder="请输入宽度"
      type="number"
      input-align="right"
      v-model="adasInfo[5]"
    >
      <template #button>
        <label size="small" type="primary">CM</label>
      </template>
    </Field>
  </CellGroup>

  <CellGroup inset style="margin: 10px" class="cellGroup">
    <Field
      label="摄像头到车头保险杠距离"
      label-width="200"
      placeholder="请输入距离"
      type="number"
      input-align="right"
      v-model="adasInfo[3]"
    >
      <template #button>
        <label size="small" type="primary">CM</label>
      </template>
    </Field>
  </CellGroup>


  <CellGroup inset style="margin: 20px; height: 40px">
    <Button
      type="primary"
      style="width: 100%"
      @click="calibrationFn(1)"
      :loading="loading"
      >开始标定</Button
    >
  </CellGroup>

  <StickyBottom :guide="guide" />
</template>

<script setup>
import TabHeaders from "@/components/tab.vue";
import StickyBottom from "@/components/stickyBottom.vue";
import { CellGroup, Field, Button, Toast } from "vant"; // Checkbox
import { defineComponent, ref, onMounted } from "vue";
import { postAN } from "@/utlis/AdApi";
import { getQueryString } from "@/utlis/QueryStr";
import { useRoute } from "vue-router";

import { useI18n } from "vue-i18n";
const { t } = useI18n();
var arr = [1,2,3,5];
let route = useRoute();
const guideRouter = route.query.guide;

// 标题
const navTitle = ref("ADAS标定");
const guide = ref(true);
const nowCmd = ref(""); // 当前使用的指令
const adasInfo = ref([]);
const loading = ref(false);

const calibrationFn = (num) => {
  loading.value = true;
  var cmds = [...adasInfo.value];
  var items = [];
  for(var i=0;i<cmds.length;i++) {
    if(arr.includes(i)) {
      items.push(cmds[i]);
    }
  }
  setTimeout(() => {
    loading.value = false;
  }, 2000);
  postAN.calibrationFn(num, items.join("@"));
};

const setNumber = (num) => {
  return num / 10;
}

defineComponent({
  name: "yunweibao-Demarcate",
});

// -------------------------------------------------------------------
// 安卓回调函数
const callJSResult = (str) => {
  var cmds = str.split(";")[0];
  var cmdArr = cmds.split(",").splice(1);
  for(var i=0;i<cmdArr.length;i++) {
    if(arr.includes(i)) {
      cmdArr[i] = setNumber(cmdArr[i]);
    }
  }
  adasInfo.value = cmdArr;
};
// 安卓成功失败回调
const callJSResult_Status = (str) => {
  if (str.indexOf("Success") !== -1) {
    Toast.success(t("toast[1]"));
  } else {
    Toast.fail(t("toast[2]"));
  }
};

// 向安卓发送指令
const androidStatus_fn = () => {
  var param = "";
  if (guideRouter) {
    var guideIndex = sessionStorage.guideIndex;
    guide.value = true;
    var guideArr = JSON.parse(sessionStorage.guide);
    param = guideArr[guideIndex].split("@");
  } else {
    param = getQueryString("param").split("@"); // 解析出指令
  }
  nowCmd.value = param[1];
  postAN.ANSend(param[1]);
};

androidStatus_fn();

onMounted(() => {
  window.callJSResult = callJSResult;
  window.callJSResult_Status = callJSResult_Status;
});
</script>

